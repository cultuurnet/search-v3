{
  "name": "cultuurnet/search-v3",
  "description": "Cultuurnet search service for version 3",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "publiq vzw",
      "email": "info@publiq.be"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "CultuurNet\\SearchV3\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CultuurNet\\SearchV3\\": "test"
    }
  },
  "require": {
    "php": "^7.1 || ^8.0",
    "guzzlehttp/guzzle": "^7.0",
    "yogarine/doctrine-annotation-autoload": "^0.3.0",
    "gammadia/jms-serializer-1.x": "^1.14",
    "simple-bus/jms-serializer-bridge": "^1.0"
  },
    "require-dev": {
        "phpunit/phpunit": "^9.3.11",
        "publiq/php-cs-fixer-config": "^1.3",
        "phpstan/phpstan": "^0.12.80"
    },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan analyse",
    "cs": "php-cs-fixer fix -v --diff --dry-run",
    "cs-fix": "php-cs-fixer fix -v --diff",
    "ci": [
      "composer cs",
      "composer phpstan",
      "composer test"
    ]
  },
  "config": {
    "allow-plugins": {
      "yogarine/doctrine-annotation-autoload": true
    }
  }
}
